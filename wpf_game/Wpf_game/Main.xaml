<Page x:Class="Wpf_game.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Wpf_game"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="450"
      Title="Main">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="{StaticResource n_backDrawingImage}"/>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="110"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="110"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Content="Играть" Grid.Row="1" Grid.Column="1" Width="200" Click="a_but1Click" Background="#FFE2E9E7" BorderBrush="#FF9BD3D5" BorderThickness="4,4,4,4" FontFamily="Cascadia Mono" FontSize="18" Grid.ColumnSpan="3"/>
        <Image Source="{StaticResource person_1DrawingImage }" Grid.Row="3" Grid.Column="2" Width="83.3333333333333"/>
    </Grid>
</Page>
