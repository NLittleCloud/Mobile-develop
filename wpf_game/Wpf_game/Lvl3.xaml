<Page x:Class="Wpf_game.Lvl3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Wpf_game"
      mc:Ignorable="d" 
      Height="800" Width="450"
      Title="Lvl3" Focusable="False">

    <Canvas x:Name="mycanvas" Focusable="True" Height="800" Width="450" >
        <Canvas.Background>
            <ImageBrush ImageSource="{StaticResource lvl3_backDrawingImage}"/>
        </Canvas.Background>
        <Label Content="Score:" x:Name="l_score" HorizontalAlignment="Left" VerticalAlignment="Center" Width="175" Height="46" FontFamily="Bahnschrift SemiLight" FontSize="24" Foreground="White"/>
        <Image x:Name="person" Source="/Images/person.png" Height="100" Width="85" Canvas.Left="175" Canvas.Top="481" HorizontalAlignment="Left" VerticalAlignment="Center"/>
    </Canvas>
</Page>
